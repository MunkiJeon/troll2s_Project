<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_lo_toplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/mypage_btn_gomain"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_marginTop="8dp"

            android:layout_marginEnd="8dp"
            android:text="@string/mypage_main"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_tv_title"
            app:layout_constraintEnd_toStartOf="@+id/mypage_btn_gosetting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/mypage_btn_gosetting"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"

            android:text="@string/option_title"
            app:layout_constraintBottom_toBottomOf="@+id/mypage_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/mypage_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="@string/mypage_title"

            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/mypage_btn_gomain"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_lo_toplayer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.85">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_lo_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/colorBox">

                    <ImageView
                        android:id="@+id/mypage_iv_profilepic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"

                        android:scaleType="fitCenter"
                        android:src="@drawable/no_image"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/mypage_tv_myid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"

                        android:text="@string/mypage_myid"
                        android:textColor="?attr/colorTextInBox"
                        android:textSize="20dp"

                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/mypage_tv_myname"
                        app:layout_constraintStart_toEndOf="@+id/mypage_iv_profilepic"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread" />

                    <TextView
                        android:id="@+id/mypage_tv_myname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/mypage_myname"
                        android:textColor="?attr/colorTextInBox"
                        android:textSize="20dp"

                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/mypage_tv_nickname"
                        app:layout_constraintStart_toStartOf="@+id/mypage_tv_myid"
                        app:layout_constraintTop_toBottomOf="@+id/mypage_tv_myid" />

                    <TextView
                        android:id="@+id/mypage_tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/mypage_nickname"
                        android:textColor="?attr/colorTextInBox"

                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/mypage_tv_myname"
                        app:layout_constraintTop_toBottomOf="@+id/mypage_tv_myname" />

                    <Button
                        android:id="@+id/mypage_btn_profilechange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/mypage_btn_profilechange"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/mypage_tv_introtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/mypage_intro_title"

                    android:textSize="32sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_lo_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"

                    android:background="?attr/colorBox"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/mypage_tv_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/detail_shp_layout_comment_box_bg"
                        android:gravity="top"
                        android:hint="@string/mypage_intro_hint"
                        android:maxLength="150"

                        android:padding="10dp"
                        android:textAlignment="gravity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/mypage_tv_mypost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/mypage_mypost"

                    android:textSize="32sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:id="@+id/mypage_lo_mypost"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="16dp"
                    android:padding="8dp"
                    android:contentDescription="본인이 작성한 글"
                    android:background="?attr/colorBox">

                    <LinearLayout
                        android:padding="2sp"
                        android:id="@+id/mypage_lo_myposts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/mypage_tv_mylike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/mypage_likes"

                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:id="@+id/mypage_lo_likelist"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="16dp"
                    android:padding="8dp"
                    android:background="?attr/colorBox"
                    android:contentDescription="본인이 누른 좋아요 유저">

                    <LinearLayout
                        android:id="@+id/mypage_lo_mylikes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>