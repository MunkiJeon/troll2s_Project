<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/mypage_iv_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"


        android:scaleType="fitXY"

        android:src="@drawable/dummy_image01"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/mypage_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="32sp"
        android:textStyle="bold"
        android:text="마이 페이지"

        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_lo_profile"
        android:layout_width="@+id/mypage_tv_title"
        android:layout_height="wrap_content"
        android:background="@color/box"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/mypage_tv_title"
        app:layout_constraintStart_toStartOf="@+id/mypage_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/mypage_tv_title">

        <ImageView
            android:id="@+id/mypage_iv_profilepic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"

            android:scaleType="fitCenter"
            android:src="@drawable/dummy_image02"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/mypage_tv_myid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:text="아이디"
            android:textColor="@color/background"
            android:textSize="24dp"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/mypage_iv_profilepic"
            app:layout_constraintTop_toTopOf="@+id/mypage_iv_profilepic" />

        <TextView
            android:id="@+id/mypage_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:text="닉네임"
            android:textColor="@color/background"
            android:textSize="20dp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/mypage_tv_myid"
            app:layout_constraintTop_toBottomOf="@+id/mypage_tv_myid" />

        <Button
            android:id="@+id/mypage_btn_profilechnge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"

            android:minHeight="48dp"

            android:text="프로필 변경"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mypage_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="16dp"
        android:text="소개"

        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mypage_lo_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mypage_lo_profile"
        app:layout_constraintTop_toBottomOf="@+id/mypage_lo_profile" />

    <Button
        android:id="@+id/mypage_btn_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:minHeight="38dp"

        android:text="저장"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_tv_intro"
        app:layout_constraintEnd_toEndOf="@+id/mypage_lo_profile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mypage_tv_intro"
        app:layout_constraintTop_toTopOf="@+id/mypage_tv_intro" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_lo_intro"
        android:layout_width="@+id/mypage_tv_intro"
        android:layout_height="wrap_content"
        android:background="@color/box"

        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="@+id/mypage_btn_intro"
        app:layout_constraintStart_toStartOf="@+id/mypage_tv_intro"
        app:layout_constraintTop_toBottomOf="@+id/mypage_tv_intro">

        <TextView
            android:id="@+id/mypage_et_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:gravity="top"
            android:maxLength="150"
            android:background="@drawable/mypage_box_clear_shp"

            android:hint="소개말을 입력해 주세요."
            android:textAlignment="gravity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mypage_tv_mypost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="16dp"
        android:text="내가 작성한 글"

        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mypage_lo_intro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mypage_lo_intro"
        app:layout_constraintTop_toBottomOf="@+id/mypage_lo_intro" />
</androidx.constraintlayout.widget.ConstraintLayout>