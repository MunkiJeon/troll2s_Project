<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:id="@+id/detail_lo_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/box"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/detail_iv_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/detail_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/text_default"
            android:textSize="20sp"
            tools:text="말하는 감자" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_lo_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detail_iv_post_img"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_launcher" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/detail_flow_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:constraint_referenced_ids="detail_btn_like,detail_btn_comment"
                app:flow_horizontalGap="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_iv_post_img" />

            <ImageButton
                android:id="@+id/detail_btn_like"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_like"
                app:tint="@color/button" />

            <ImageButton
                android:id="@+id/detail_btn_comment"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_comment"
                app:tint="@color/button" />

             <TextView
                 android:id="@+id/detail_likers"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@id/detail_flow_icons"
                 app:layout_constraintStart_toStartOf="@id/detail_flow_icons"
                 tools:text="nickname님 외 여러 명이 좋아합니다"
                 android:layout_marginTop="10dp" />

             <TextView
                 android:id="@+id/detail_tv_content"
                 android:layout_width="384dp"
                 android:layout_height="wrap_content"
                 tools:text="나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다 나는 말하는 감자다"
                 app:layout_constraintTop_toBottomOf="@id/detail_likers"
                 app:layout_constraintStart_toStartOf="@id/detail_flow_icons"
                 android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/detail_tv_show_all_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/show_all_comment"
                android:textColor="@color/box"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/detail_flow_icons"
                app:layout_constraintTop_toBottomOf="@id/detail_tv_content" />

            <include
                android:id="@+id/detail_include_comment"
                layout="@layout/layout_detail_comment_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/detail_tv_show_all_comment"
                app:layout_constraintTop_toBottomOf="@id/detail_tv_show_all_comment"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>