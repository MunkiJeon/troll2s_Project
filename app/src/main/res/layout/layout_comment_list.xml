<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:id="@+id/detail_layout_comment_list">

    <ImageView
        android:id="@+id/detail_comment_list_iv__profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/detail_comment_list_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nickname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_comment_list_iv__profile_img"
        android:layout_marginStart="14dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/detail_comment_list_tv_comment"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_comment_list_tv_nickname"
        app:layout_constraintStart_toEndOf="@id/detail_comment_list_iv__profile_img"
        tools:text="나는 김밥 나는 김밥"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="14dp" />

    <ImageButton
        android:id="@+id/detail_comment_list_ib_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/detail_comment_list_tv_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_comment_list_tv_comment"
        android:layout_marginStart="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>