<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trolls.Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor" type="color">@color/text_default</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="buttonStyle">@style/button_light</item>

        <item name="colorButton">@color/button</item>
        <item name="colorBox">@color/box</item>
        <item name="colorDivider"></item>
    </style>

    <style name="Base.Theme.Trolls.Night" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor" type="color">@color/text_default_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="buttonStyle">@style/button_dark</item>

        <item name="colorButton">@color/button_dark</item>
        <item name="colorBox">@color/box_dark</item>
    </style>
</resources>